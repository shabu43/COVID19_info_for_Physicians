<div class="grid">

    <h2 style="color:darkred">
        Can't find your queries? Post here to get feedback from us or someone like you!<br>
    </h2>
    <div class="input-group-search">
        <input id="inputstr" class="form-control" name="term" placeholder="Enter your queries" type="text">
        <button id="searchbuttn" class="btn btn-primary" type="submit"><span> Post </span></button>

        @if (Session["id"] == null)
        {

            <button onclick="window.location.href='/Login/Login'" class="btn btn-primary-darker clinical-search-switch" id="kendoToggler">Login here to post!</button>}
    </div>
</div>

